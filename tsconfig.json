{
  "compilerOptions": {
    "module": "NodeNext" /* Specify what module code is generated. */,
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false
  },
  "include": [
    "./src"
  ]
}
